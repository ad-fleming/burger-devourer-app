
<div class="container my-3">
  <h1 class="text-center">Burger Devourer</h1>
  <div class="col-sm-12 my-3">
    <div class="row d-flex justify-content-between">
      <ul class="col-sm-5">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>

      <ul class="col-sm-5">
        {{#each burgers}}
          {{#if devoured}}
            <li class="d-flex justify-content-between">
              {{id}}. {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
      {{!-- <ul class="col-sm-5">
        {{#each burgers}}
          {{#if devoured}}
            {{id}}. {{burger_name}}
          {{/if}}
        {{/each}}
      </ul> --}}

    </div>
  </div>
  <div class="container col-12 d-flex justify-content-center">
    <div class="row">
      <form class=" col-sm-12 create-form">
        <div class="form-group">
          <label for="burg"></label>
          <input type="text" id="burg" name="name" placeholder="What kind of burger would you like?">
        </div>
        <p class="text-center">
          <button class="justify-content-center" type="submit">Add Burger</button>
        </p>
      </form>
    </div>
  </div>
  
</div>

